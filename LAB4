#include <stdio.h>

// Define the structure
struct student {
    int roll;
    char name[20];
    float marks;
};

int main() {
    struct student s;       // Structure variable
    struct student *ptr;    // Pointer to structure

    ptr = &s; // Assign address of s to ptr

    // Input roll number
    printf("Enter roll number: ");
    scanf("%d", &ptr->roll);

    // Input name
    printf("Enter name: ");
    scanf("%19s", ptr->name); // Limit to avoid buffer overflow

    // Input marks
    printf("Enter marks: ");
    scanf("%f", &ptr->marks);

    // Display the data
    printf("\n--- Student Details ---\n");
    printf("Roll Number: %d\n", ptr->roll);
    printf("Name: %s\n", ptr->name);
    printf("Marks: %.2f\n", ptr->marks);

    return 0;
}
